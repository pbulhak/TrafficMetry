# TrafficMetry Environment Configuration Example
# Copy this file to .env and adjust values according to your setup

# === CAMERA SETTINGS ===
CAMERA__URL=rtsp://192.168.1.100:554/stream
CAMERA__WIDTH=1920
CAMERA__HEIGHT=1080
CAMERA__FPS=30

# === MODEL SETTINGS ===
MODEL__PATH=data/models/yolov8n.pt
MODEL__CONFIDENCE_THRESHOLD=0.5
MODEL__DEVICE=cpu
MODEL__MAX_DETECTIONS=100

# === DATABASE SETTINGS ===
DATABASE__PATH=data/trafficmetry.db

# === SERVER SETTINGS ===
SERVER__HOST=0.0.0.0
SERVER__PORT=8000
SERVER__CORS_ORIGINS=["*"]
SERVER__WEBSOCKET_MAX_CONNECTIONS=10

# === LOGGING SETTINGS ===
LOGGING__LEVEL=INFO
LOGGING__FILE_PATH=data/logs/trafficmetry.log
LOGGING__MAX_FILE_SIZE_MB=10

# === GLOBAL SETTINGS ===
DEBUG=false
CONFIG_FILE=config.ini